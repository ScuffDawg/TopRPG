<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>evnt_Main_Menu</name>
    <events>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions>
                <action id="0" name="Call function" type="Function">
                    <param id="0" name="Name">&quot;CreateButton&quot;</param>
                    <param id="1" name="Parameter {n}">&quot;Start Game&quot;</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="0" name="On function" type="Function">
                    <param id="0" name="Name">&quot;CreateButton&quot;</param>
                </condition>
            </conditions>
            <actions>
                <action id="-3" name="Create object" type="System">
                    <param id="0" name="Object to create">Text</param>
                    <param id="1" name="Layer">&quot;Menu&quot;</param>
                    <param id="2" name="X">LayoutHeight / 2 - Text.Height</param>
                    <param id="3" name="Y">LayoutWidth / 2  - Text.Width</param>
                </action>
                <action id="0" name="Set text" type="Text">
                    <param id="0" name="Text">Function.Param(0)</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
